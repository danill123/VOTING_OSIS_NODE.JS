    <!-- Script for summernote -->
    <script>
        $(document).ready(function() {
            $('#summernote').summernote();
        });

        $(document).ready( function() {
                $(document).on('change', '.btn-file :file', function() {
                var input = $(this),
                    label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
                input.trigger('fileselect', [label]);
                });

                $('.btn-file :file').on('fileselect', function(event, label) {
                    
                    var input = $(this).parents('.input-group').find(':text'),
                        log = label;
                    
                    if( input.length ) {
                        input.val(log);
                    } else {
                        if( log ) alert(log);
                    }
                
                });
                    function readURL(input) {
                        if (input.files && input.files[0]) {
                            var reader = new FileReader();
                            
                            reader.onload = function (e) {
                                $('#img-upload').attr('src', e.target.result);
                            }
                            
                            reader.readAsDataURL(input.files[0]);
                        }
                    }
                    $("#imgInp").change(function(){
                        readURL(this);
                    }); 	
                });

        $(document).ready(() => {
          $("#send").click(() => {
            const calon = $("#calon").val().toString()
            const visi  = $("#summernote").val().toString()
            const nama_cal = btoa(calon) // encode nama calon
            const visi_misi = btoa(visi) // encode nama visi-misi
            $("#url_form").attr("action", `/up_calon/'${nama_cal}'/'${visi_misi}'`)
          })
        })    
    </script>

